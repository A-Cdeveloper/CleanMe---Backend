generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ProblemCategory {
  cat_id   Int       @id @default(autoincrement())
  cat_name String
  problems Problem[]

  @@map("categories")
}

model Problem {
  id          String          @id @default(uuid())
  title       String
  description String
  position    Json
  createdAt   DateTime        @default(now())
  updatedAt   DateTime?
  status      String          @default("active")
  cat_id      Int
  uid         Int
  image       String          @db.VarChar(400)
  pinata_id   String          @default("") @db.VarChar(400)
  category    ProblemCategory @relation(fields: [cat_id], references: [cat_id])
  user        User            @relation(fields: [uid], references: [uid])

  @@index([cat_id], map: "problems_cat_id_fkey")
  @@index([uid], map: "problems_uid_fkey")
  @@map("problems")
}

model User {
  uid               Int       @id @default(autoincrement())
  firstname         String
  lastname          String
  phone             String
  email             String    @unique
  passwordHash      String
  isVerified        Boolean   @default(false)
  role              String
  verificationToken String?   @unique
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  problems          Problem[]

  @@map("users")
}

model Settings {
  id              Int     @id @default(autoincrement())
  appName         String
  appArea         String?
  initialZoom     Int
  defaultPosition Json
  centerPosition  Json
  defaultBound    Json

  @@map("settings")
}
